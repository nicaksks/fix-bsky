<meta content="#0481f7" name="theme-color" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta
  name="twitter:title"
  content="<%- author.displayName %> (@<%- author.handle %>)"
/>
<meta property="twitter:description" content="<%- text %>" />
<meta name="twitter:image" content="<%- media.url %>" />
<meta name="twitter:image:alt" content="<%- text %>" />

<!-- Open Graph -->
<meta property="og:site_name" content="Bluesky Social" />
<meta property="og:url" content="<%- originalURL %>" />
<meta
  name="og:title"
  content="<%- author.displayName %> (@<%- author.handle %>)"
/>
<meta property="og:description" content="<%- text %>" />
<meta property="og:image" content="<%- media.url %>" />

<meta http-equiv="refresh" content="0; url=<%- originalURL %>" />
